DEX_IDS=raydium,orca,pump,meteora,lifinity

# Child filters
CHILD_VOL_MIN_USD=5
CHILD_LIQ_MIN_USD=100
CHILD_MAX_AGE_HOURS=1440

# Parent filters
VOL_MIN_USD=50
